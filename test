### **Code-Behind (`Default.aspx.cs`)**
```csharp
using System;
using System.Data;
using System.Data.OracleClient; // ä½¿ç”¨ .NET 4.7.2
using DevExpress.Web;

public partial class Default : System.Web.UI.Page
{
    protected void Page_Load(object sender, EventArgs e)
    {
        if (!IsPostBack)
        {
            BindGrid(); // åˆå§‹åŒ– GridView
        }
    }

    private void BindGrid()
    {
        DataTable dt = new DataTable();
        dt.Columns.Add("SearchColumn", typeof(string));
        dt.Columns.Add("TargetColumn", typeof(string));
        
        dt.Rows.Add("", ""); // åˆå§‹ç©ºç™½è¡Œ
        ASPxGridView1.DataSource = dt;
        ASPxGridView1.DataBind();
    }

    protected void ASPxGridView1_RowUpdating(object sender, DevExpress.Web.Data.ASPxDataUpdatingEventArgs e)
    {
        string inputValue = e.NewValues["SearchColumn"].ToString();
        string resultFromDB = GetDataFromOracle(inputValue); // åŸ·è¡ŒæŸ¥è©¢

        if (!string.IsNullOrEmpty(resultFromDB))
        {
            e.NewValues["TargetColumn"] = resultFromDB; // æ›´æ–°ç›®æ¨™æ¬„ä½
        }

        ASPxGridView1.CancelEdit();
        e.Cancel = true; // å–æ¶ˆé è¨­è¡Œç‚ºï¼Œæ‰‹å‹•æ›´æ–°
        BindGrid();
    }

    private string GetDataFromOracle(string inputValue)
    {
        string result = "";
        string connectionString = "your_connection_string";

        using (OracleConnection conn = new OracleConnection(connectionString))
        {
            conn.Open();
            string query = "SELECT TargetColumn FROM YourTable WHERE SearchColumn = :inputValue";
            using (OracleCommand cmd = new OracleCommand(query, conn))
            {
                cmd.Parameters.Add(":inputValue", OracleType.VarChar).Value = inputValue;

                using (OracleDataReader reader = cmd.ExecuteReader())
                {
                    if (reader.Read())
                    {
                        result = reader["TargetColumn"].ToString();
                    }
                }
            }
        }
        return result;
    }
}
```


SELECT 
  M.MVIEW_NAME,
  M.REFRESH_MODE,
  M.REFRESH_METHOD,
  M.BUILD_MODE,
  M.LAST_REFRESH_TYPE,
  M.LAST_REFRESH_DATE,
  M.NEXT AS MVIEW_NEXT_REFRESH,
  J.JOB,
  J.WHAT AS JOB_WHAT,
  J.NEXT_DATE AS JOB_NEXT_RUN,
  J.INTERVAL AS JOB_REPEAT_INTERVAL
FROM USER_MVIEWS M
LEFT JOIN (
  SELECT 
    JOB,
    WHAT,
    NEXT_DATE,
    INTERVAL
  FROM DBA_JOBS
  WHERE WHAT LIKE '%MVIEW%' OR WHAT LIKE '%REFRESH%'
) J
ON UPPER(J.WHAT) LIKE '%' || UPPER(M.MVIEW_NAME) || '%'
ORDER BY M.MVIEW_NAME;